{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>

{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h1>Criar postagem</h1>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo: </label>
                <input type="text" name="titulo" class="form-control" id="titulo">
            <label for="slug">Slug: </label>
                <input type="text" name="slug" class="form-control" id="slug">
            <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" class="form-control" id="descricao">
            <label for="conteudo">Conteúdo: </label>
                <textarea name="conteudo" class="form-control" id="conteudo"></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select" id="categoria">
                <option value="0">Selecione a categoria</option>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria foi registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-3" style="transition: 0.15s;">Criar postagem</button>
        </form>
    </div>
</div>