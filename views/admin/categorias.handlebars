<h2 >Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success" style="transition: 0.15s;">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4 mb-4">
        <div class="card-body" style="padding-left:20px;">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small> <br>
            <small>{{date}}</small>
            <div style="display: flex; flex-direction:row;">
                <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4" style="transition: 0.15s;">Editar categoria</button></a>
                <form action="/admin/categorias/delet" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger mt-4 mx-3" style="transition: 0.15s;">Excluir categoria</button>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria para ser exibida</h4>
{{/each}}